<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_resultat_wizard" model="ir.ui.view">
		<field name="name">resultat.wizard.view</field>
		<field name="model">resultat.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="to_date"/>
					</group>
					<group>
						<field name="state" widget="radio"/>
					</group>
				</group>
				<footer>
					<button string="Imprimer" class="btn-primary" name="print_dates" type="object"/>
					<button string="Annuler" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_resultat_wizard" model="ir.actions.act_window">
		<field name="name">Résultat</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">resultat.wizard</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_resultat_wizard" />
		<field name="target">new</field>
	</record>

	<menuitem id="menu_resultat_wizard" name="Résultat" sequence="20" parent="account.account_reports_legal_statements_menu" action="action_resultat_wizard" />

	<record id="report_resultat_wizard" model="ir.actions.report">
		<field name="name">Résultat</field>
		<field name="model">resultat.wizard</field>
		<field name="report_type">qweb-pdf</field>
		<field name="report_name">accounting.resultat_wizard</field>
	</record>

