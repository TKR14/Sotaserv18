<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--on met les enregistrement ici dans la balise odoo -->

	<record id='cnss_bds_action' model='ir.actions.act_window'>
		<field name="name"> Gestion des CNSS BDS </field>
		<field name="res_model">cnss.bds</field>
		<field name="view_mode">list,form</field>
	</record>
	<menuitem name="CNSS" id="cnss_base_menu" />
	<menuitem name="CNSS BDS" id="cnss_bds_menu" parent="cnss_base_menu"
		action="cnss_bds_action" />
	<menuitem name="BDS" id="cnss_ddd_menu" parent="cnss_base_menu" />

	<record id="cnss_bds_view_form" model="ir.ui.view">
		<field name="name">CNSS BDS Form</field>
		<field name="model">cnss.bds</field>
		<field name="arch" type="xml">
			<form edit="0">
				<sheet>
					<group>
						<field name="l_type_enreg" />
						<field name="n_num_affilie" />
						<field name="l_annee" />
						<field name="l_mois" />
						<field name="l_period" />
						<field name="n_num_assure" />
						<field name="employee_ids" widget="many2one_tags" />
						<field name="l_num_cin" />
						<field name="n_enfants" />
						<field name="n_af_a_payer" />
						<field name="n_af_a_deduire" />
						<field name="n_af_net_a_payer" />
						<field name="n_af_a_reverser" />
						<field name="n_jour_declares" />
						<field name="n_salaire_reel" />
						<field name="n_salaire_plaf" />
						<field name="n_situation" />
						<field name="n_ctr" />
						<field name="n_filler" />
						<field name="l_status" readonly="1" />
					</group>
				</sheet>
			</form>
		</field>
	</record>

