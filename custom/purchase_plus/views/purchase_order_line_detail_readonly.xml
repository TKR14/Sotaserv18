<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_order_line_view_form_details_readonly" model="ir.ui.view">
        <field name="name">purchase.order.line.view.form.details.readonly</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <form edit="false" create="false" delete="false">
                <header>
                    </header>
                
                <div class="d-flex flex-wrap p-3">
                    <div class="flex-fill me-3">
                        <div class="oe_title">
                            <h2><span class="mt-3">Article :</span></h2>
                            <h2>
                                <field name="product_id" readonly="1" options="{'no_open': True}"/>
                            </h2>
                        </div>
                    </div>
                    <div class="flex-fill me-3 ps-4">
                        <div class="oe_title">
                            <h2><span class="mt-3">Montant Total :</span></h2>
                            <h2>
                                <div class="d-flex align-items-center">
                                    <field name="price_subtotal" readonly="1" widget="monetary" class="me-2"/>
                                    <span class="fs-6 text-muted">CFA</span>
                                </div>
                            </h2>
                        </div>
                    </div>
                    <div class="flex-fill ps-5">
                        <div class="oe_title">
                            <h2><span class="mt-3">À ventiler :</span></h2>
                            <h2>
                                <div class="d-flex align-items-center">
                                    <field name="ventilate" readonly="1" widget="monetary" class="me-2"/>
                                    <span class="fs-6 text-muted">CFA</span>
                                </div>
                            </h2>
                        </div>
                    </div>
                </div>

                <notebook>
                    <page string="Détails" name="details">
                        <field name="detail_ids">
                            <list create="false" edit="false" delete="false">
                                <field name="name" readonly="1"/>
                                <field name="unit_measurement" string="UDM" options="{'no_open': True}"/>
                                <field name="quantity_type" string="Type"/>
                                <field name="quantity_pr"/>
                                <field name="price_unit" widget="monetary"/>
                                <field name="subtotal" widget="monetary" sum="Total"/>
                            </list>
                        </field>
                        <group class="oe_subtotal_footer">
                            <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}" string="Total Général"/>
                        </group>
                    </page>
                </notebook>

                <footer>
                    <button string="Fermer" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>