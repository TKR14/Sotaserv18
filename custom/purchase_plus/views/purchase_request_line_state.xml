        <field name="res_model">purchase.request.line.state</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_purchase_request_line_state"
        name="Ã‰tats des LDA"
        parent="purchase.menu_purchase_config"
        action="action_purchase_request_line_state"
    />
</odoo>
