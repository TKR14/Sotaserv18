<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_purchase_request_line_state_tree" model="ir.ui.view">
        <field name="name">purchase.request.line.state.tree</field>
        <field name="model">purchase.request.line.state</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="selection_ids"/>
                <field name="selection_id" domain="[('id', 'in', selection_ids)]"/>
            </list>
        </field>
    </record>

    <record id="view_purchase_request_line_state_form" model="ir.ui.view">
        <field name="name">purchase.request.line.state.form</field>
        <field name="model">purchase.request.line.state</field>
        <field name="arch" type="xml">
            <form string="Purchase request Line State">
                <sheet>
                    <group>
                        <field name="sequence" widget="handle"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

