<odoo>
    <record id="view_alert_wizard_form" model="ir.ui.view">
        <field name="name">alert.wizard.form</field>
        <field name="model">alert.wizard</field>
        <field name="arch" type="xml">
            <form string="Alert">
                <div class="o_form_label">
                    Attention! Le champ 'Avance' est vide. Voulez-vous continuer ?
                </div>
                <footer>
                    <button string="Ok" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Annuler" type="object" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>