<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="purchase_verification_form_view" model="ir.ui.view">
    <field name="name">purchase.verification.form</field>
    <field name="model">purchase.verification</field>
    <field name="arch" type="xml">
      <form>
          <group>
            <field name="title" readonly="1" nolabel="1"/>
          </group>

          <group>
            <field name="line_ids" nolabel="1" colspan="2">
              <list string="Details" create="false" delete="false" editable="bottom">
                <field name="line_id" options="{'no_open': true}" column_invisible="True"/>
                
                <field name="request_id" readonly="1"/>
                <field name="product_id"/>
                <field name="product_qty" readonly="1"/>
                <field name="available_qty" readonly="1"/>
                <field name="product_uom_id" readonly="1" force_save="1"/>
                
                <field name="purchase_type" required="1"/>
              </list>
            </field>
          </group>
        <footer>
          <button name="validate" string="Valider" type="object" class="oe_highlight" data-hotkey="q"/>
          <button special="cancel" string="Annuler" class="btn-secondary" data-hotkey="z"/>
      </footer>
      </form>
    </field>
  </record>

  <record id="purchase_verification_action_wizard" model="ir.actions.act_window">
    <field name="name">VÃ©rification d'achat</field>
    <field name="res_model">purchase.verification</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="view_id" ref="purchase_verification_form_view"/>
  </record>

</odoo>