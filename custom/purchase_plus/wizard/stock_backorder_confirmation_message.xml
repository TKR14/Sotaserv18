<odoo>
    <record id="view_backorder_confirm_message_form" model="ir.ui.view">
        <field name="name">stock.backorder.confirm.message</field>
        <field name="model">stock.backorder.confirmation.message</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                <group>
                    <div class="o_form_label">Des véhicules seront créés. Continuer ?</div>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirmer" type="object" class="btn-primary"/>
                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>