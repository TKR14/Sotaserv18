<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <record id="view_purchase_request_line_make_purchase_order_purchase_pluss" model="ir.ui.view">
    <field name="name">purchase.request.line.make.purchase.order.form.inherit</field>
    <field name="model">purchase.request.line.make.purchase.order</field>
    <field name="inherit_id" ref="purchase_request.view_purchase_request_line_make_purchase_order"/>
    <field name="arch" type="xml">
      <xpath expr="//form" position="replace">
        <form>
          <group>
            <label for="supplier_ids" string="Fournisseurs" class="mb-2"/>
            <field name="supplier_ids" nolabel="1" colspan="2">
                <list create="false" editable="bottom">
                    <field name="display_name" readonly="1" />
                    <field name="phone" readonly="1" />
                    <field name="email" readonly="1" />
                    <field name="city" readonly="1" />
                    <field name="country_id" readonly="1" />
                </list>
            </field>
          </group>

          <group>
            <label for="item_ids" string="Lignes" class="mb-2"/>
            <field name="item_ids" nolabel="1" colspan="2" readonly="1" options="{'no_open': true, 'no_create': true}">
                <list string="Details" create="false" editable="top">
                    <field name="line_id" options="{'no_open': true}" column_invisible="True" />
                    <field name="request_id"/>
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="product_qty"/>
                    <field name="product_uom_id" groups="uom.group_uom"/>
                </list>
            </field>
          </group>

          <footer>
            <button
                name="make_purchase_order"
                string="CrÃ©er une demande de prix"
                type="object"
                class="btn-primary"
                data-hotkey="q"
            />
            <button special="cancel" string="Annuler" class="btn-secondary" data-hotkey="z"/>
          </footer>
        </form>
      </xpath>
    </field>
  </record>

</odoo>