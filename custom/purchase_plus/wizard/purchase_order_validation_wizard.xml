<odoo>
    <record id="purchase_order_validation_wizard_view_form" model="ir.ui.view">
        <field name="name">purchase.order.validation.wizard.view.form</field>
        <field name="model">purchase.order.validation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="site_id" options="{'no_open': True, 'no_create': True}" force_save="1"/>
                    <field name="currency_id" options="{'no_open': True, 'no_create': True}" force_save="1"/>
                </group>
                <group>
                    <field name="line_ids" options="{'no_open': True, 'no_create': True}" nolabel="1">
                        <list create="0" delete="0" editable="bottom">
                            <field name="can_update_product" column_invisible="True"/>
                            <field name="order_line_id" column_invisible="True"/>
                            
                            <field name="product_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="product_price"/>
                            <field name="need_price"/>
                            <field name="offer_price"/>
                            <field name="update_need" widget="boolean_toggle"/>
                            
                            <field name="update_product" 
                                   widget="boolean_toggle" 
                                   readonly="not can_update_product"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button string="Valider" type="object" name="button_validate" class="btn-primary" 
                            confirm="Les mises à jour appliquées ne sont pas réversibles même après l'annulation de cette commande. Continuer?"
                            data-hotkey="q"/>
                    <button string="Annuler" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record> 
</odoo>