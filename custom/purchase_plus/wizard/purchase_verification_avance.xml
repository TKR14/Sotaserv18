<odoo>
    <record id="reliquat_wizard_view_form" model="ir.ui.view">
        <field name="name">reliquat.wizard.form</field>
        <field name="model">reliquat.wizard</field>
        <field name="arch" type="xml">
            <form string="Reliquat">
                <sheet>
                    <div class="oe_title">
                        <field name="message" readonly="1"/>
                    </div>
                </sheet>
                <footer>
                    <button string="Confirmer" class="btn-primary" type="object" name="action_confirm"/>
                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
