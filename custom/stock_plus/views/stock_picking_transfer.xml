<odoo>
    <!-- FORM -->
    <record id="stock_picking_transfer_view_form" model="ir.ui.view">
        <field name="name">stock.picking.transfer.view.form</field>
        <field name="model">stock.picking.transfer</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="line_ids" nolabel="1" colspan="2">
                        <list create="0" editable="bottom">
                            <field name="product_id" options="{'no_open': true}" readonly="1"/>
                            <field name="quantity" readonly="1"/>
                            <field name="quantity_available" readonly="1"/>
                            <field name="source_id" options="{'no_open': true}" readonly="1"/>
                            <field name="destination_id" options="{'no_open': true}" readonly="1"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button name="button_transfer" string="TransfÃ©rer" type="object" class="btn-primary"/>
                    <button special="cancel" string="Annuler" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>