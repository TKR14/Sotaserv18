<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_plus_stock_picking_form_form_inherited" model="ir.ui.view">
        <field name="name">stock.plus.stock.return.picking.form.inherited</field>
        <field name="inherit_id" ref="purchase_igaser.view_picking_form_inherit50" />
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <button name="%(stock.act_stock_return_picking)d" position="replace">
                <field name='return_btn_visible' invisible="1" />

                <button name="%(stock.act_stock_return_picking)d" string="Retourner"
                    invisible="not return_btn_visible"
                    type="action"
                    groups="building_plus.sotaserv_magasinier,building_plus.sotaserv_magasinier_chantier,stock.group_stock_user" />
            </button>

            <button name="button_validate" position="replace"/>
            <button name="button_validate" position="replace">
                <field name="return_to_mg" invisible="1" />
                <button name="button_validate" 
                    string="Valider" 
                    type="object" 
                    class="oe_highlight" 
                    groups="building_plus.sotaserv_magasinier,building_plus.sotaserv_magasinier_chantier"
                    invisible="state != 'assigned'"
                />
                <!-- <button name="correct_quantities" string="Corriger les quantités" type="object" attrs="{'invisible': [('return_to_mg', '=', False)]}" /> -->
            </button>

            <xpath expr="//button[@name='do_print_picking']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>         
   
            <!-- <xpath expr="//button[@name='do_unreserve']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->

            <xpath expr="//field[@name='move_ids_without_package']/list" position="attributes">
                <attribute name="create">0</attribute>    
                <attribute name="delete">0</attribute>    
            </xpath>

            <!-- <xpath expr="//button[@type='action'][@name='505']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->

            <button name="button_validate" position="after">
                <button string="Pas de réception" name="action_no_reception" type="object" class="oe_highlight" confirm="Voulez vous vraiment continuer?" invisible="state != 'assigned'" groups="building_plus.sotaserv_magasinier,building_plus.sotaserv_magasinier_chantier"/>
            </button>
            
            <div class="o_td_label" position="attributes">
                <attribute name="invisible">picking_type_code == 'internal'</attribute>
            </div>
            <field name="partner_id" position="attributes">
                <attribute name="invisible">picking_type_code == 'internal'</attribute>
                <attribute name="readonly">1</attribute>
            </field>

            <field name="origin" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>

    <record id="stock_picking_view_tree_outgoing" model="ir.ui.view">
        <field name="name">stock.picking.view.tree.outgoing</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="site_id"/>
                <field name="scheduled_date" string="Date de sortie"/>
                <field name="out_number"/>
                <field name="employee_id"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'"/>
            </list>
        </field>
    </record>

    <record id="stock_picking_view_form_outgoing" model="ir.ui.view">
        <field name="name">stock.picking.view.form.outgoing</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="is_outgoing_process" invisible="1"/>
                    <button name="button_express" string="Confirmer" class="btn-primary" invisible="state == 'done' or not is_outgoing_process" type="object"/>
                    <button name="button_print_outgoing" class="btn-secondary" type="object" icon="fa-print" invisible="state != 'done' or not is_outgoing_process"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3" invisible="name == '/'"/>
                            <field name="name" invisible="name == '/'"/>
                        </h1>
                    </div>
                    <group readonly="state != 'draft'">
                        <group>
                            <field name="is_logistic" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="site_id" options="{'no_open': True, 'no_create': True}" required="1" readonly="is_logistic"/>
                            <field name="scheduled_date" string="Date de sortie"/>
                            <field name="out_number" readonly="1"/>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <field name="picking_type_id" options="{'no_open': True, 'no_create': True}" readonly="1" force_save="1" string="Opération"/>
                            <field name="location_id" options="{'no_open': True, 'no_create': True}" readonly="1" force_save="1" string="Origine"/>
                            <field name="location_dest_id" options="{'no_open': True, 'no_create': True}" readonly="1" force_save="1" string="Destination"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Opérations">
                            <field name="product_ids" invisible="1"/>
                            <field name="move_ids_without_package" readonly="not site_id or state == 'done'" context="{'default_company_id': company_id, 'default_date': scheduled_date, 'default_location_id': location_id, 'default_location_dest_id': location_dest_id}">
                                <list editable="bottom">
                                    <field name="company_id" invisible="1"/>
                                    <field name="name" invisible="1"/>
                                    <field name="date" invisible="1"/>
                                    <field name="location_id" invisible="1"/>
                                    <field name="location_dest_id" invisible="1"/>
                                    <field name="name" invisible="1" force_save="1"/>
                                    <field name="name" invisible="1" force_save="1"/>
                                    <field name="product_id" domain="[('id', 'in', parent.product_ids)]" readonly="False" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="product_uom" string="UDM" readonly="1" force_save="1" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="outgoing_available" column_invisible="parent.state == 'done'"/>
                                    <field name="product_uom_qty" string="Sortie" readonly="not product_id" required="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Motif">
                            <field name="note" string="Motif" placeholder="Ajouter le motif de sortie"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

