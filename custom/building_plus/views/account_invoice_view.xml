<odoo>
    <!-- FORM -->
    <record id="account_invoice_readonly_form_view" model="ir.ui.view">
        <field name="name">account.invoice.readonly.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">
                <attribute name="options">{'no_open': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="options">{'no_open': True}</attribute>
            </xpath>
            <!-- <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
        </field>
    </record>

    <!-- Action -->
    <record id="account_action_invoice_readonly_server" model="ir.actions.server">
        <field name="name">Factures fournisseurs</field>
        <field name="model_id" ref="model_account_move"/>
        <field name="state">code</field>
        <field name="code">action = model.action_get_site_user()</field>
    </record>
</odoo>