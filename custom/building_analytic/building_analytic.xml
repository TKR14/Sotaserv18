<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="building_analytic_tree_view" model="ir.ui.view">
        <field name="name">building.analytic.account.list</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="account_analytic_type"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="analytic_account_inherite_form_view">
        <field name="name">analytic.account.inherit.form</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="account_analytic_type"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="account_analytic_account_template_form_view">
        <field name="name">account.analytic.account.template.form</field>
        <field name="model">account.analytic.account.template</field>
        <field name="arch" type="xml">
            <form string="Compte analytique">
                <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="account_analytic_type"/>
                        <field name="description"/>
                        <field name="parent_id"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="account_analytic_account_template_tree_view">
        <field name="name">account.analytic.account.template.list</field>
        <field name="model">account.analytic.account.template</field>
        <field name="arch" type="xml">
            <list string="Compte analytique">
                <field name="name"/>
                <field name="code"/>
                <field name="account_analytic_type"/>
                <field name="description"/>
                <field name="parent_id"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_analytic_account_template_tree_view">
        <field name="name">Comptes analytique</field>
        <field name="res_model">account.analytic.account.template</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="building_hr_timesheet_line_tree" model="ir.ui.view">
        <field name="name">account.analytic.line.list.building.inherit</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="site_id"/>
            </xpath>
        </field>
    </record>

    <record id="building_hr_timesheet_line_form" model="ir.ui.view">
        <field name="name">account.analytic.line.form.inherit</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="site_id"/>
            </xpath>
        </field>
    </record>

</odoo>