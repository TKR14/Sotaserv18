<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="validate_payday_advance_form" model="ir.ui.view">
            <field name="name">validate.payday.advance.form</field>
            <field name="model">validate.payday.advance</field>
            <field name="arch" type="xml">
                <form string="Validation avance">
                    <p class="oe_grey">
						Validation Avance.                     
                    </p>
                    <footer>
                        <button name="acion_validate" string="Valider" type="object" class="oe_highlight"/>
                        or
                        <button string="Annuler" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="validate_payday_advance_action" model="ir.actions.act_window">
            <field name="name">Valider les Avances</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">validate.payday.advance</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="hr_payroll_ma.model_hr_payroll_ma_payday_advance"/>
            <field name="binding_view_types">list</field>
        </record>

        <record id="payed_payday_advance_form" model="ir.ui.view">
            <field name="name">payed.payday.advance.form</field>
            <field name="model">payed.payday.advance</field>
            <field name="arch" type="xml">
                <form string="Pyaer avance">
                    <p class="oe_grey">
                        Payer une Avance.                     
                    </p>
                    <footer>
                        <button name="acion_payed" string="Valider" type="object" class="oe_highlight"/>
                        or
                        <button string="Annuler" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="acion_payed_payday_advance_action" model="ir.actions.act_window">
            <field name="name">Payer les Avances</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payed.payday.advance</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="hr_payroll_ma.model_hr_payroll_ma_payday_advance"/>
            <field name="binding_view_types">list</field>
        </record>

</odoo>
