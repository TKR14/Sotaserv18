<odoo>
    <report
        id="action_report_payslip_run"
        model="hr.payslip.run"
        string="Payslips Run Report"
        report_type="qweb-pdf"
        name="hr_payroll_ma.report_payslip_run"
        file="hr_payroll_ma.report_payslip_run"
        print_report_name="'Payslips - %s' % (object.name)"
    />

    <template id="report_payslip_run">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <main>
                    <div class="page">
                        <t t-foreach="docs.slip_ids" t-as="slip">
                            <t t-if="slip_index > 0">
                                <div style="page-break-before: always;"></div>
                            </t>

                            <style>
                            *{
                                margin: 5px;
                                } 
                                .table,
                                th,
                                td {
                                    border: 1px solid black;
                                    border-collapse: collapse;
                                }

                                .table3 {
                                    border: 1px solid black;
                                    border-collapse: collapse;
                                    border-bottom: none;
                                    border-left: none;
                                }

                                .table th {
                                    padding: 8px;
                                }

                                .table td {
                                    padding: 5px;
                                    text-align: center;
                                }

                                .table3 td {
                                    
                                    border: none;
                                }
                                .logo{
                                    text-align: left; 
                                    display: flex; 
                                    margin-bottom: 20px;
                                }

                                .center {
                                    margin: auto;
                                    width: 35%;
                                    border: 1px solid black;
                                    padding: 20px;
                                }
                                #element1 {display:inline-block;} 
                                #element2 {display:inline-block;} 

                                .table-container {
                                    width: 100%;
                                    border-collapse: collapse;
                                    margin-bottom: 20px;
                                }
                                .table-container th, .table-container td {
                                    border: 1px solid #000;
                                    padding: 5px;
                                    text-align: center;
                                }
                                .table-container th {
                                    background-color: #f2f2f2;
                                    font-size: 10px; 

                                }
                                .details {
                                    margin-bottom: 10px;
                                }
                                .details .row {
                                    display: flex;
                                    justify-content: space-between;
                                    align-items: center;
                                    margin-bottom: 5px;
                                }
                                .details .highlight {
                                    font-weight: bold;
                                }
                            </style>

                            <div class="oe_structure"/>
                            <div class="logo">
                                <img t-att-src="image_data_uri(slip.company_id.logo)" alt="Logo" style="max-width: 200px; height: auto;"/>
                            </div>

                            <div class="center">
                                <h4 style="text-align: center;">BULLETIN DE PAIE</h4>
                            </div>
                            <span style="float: right;"><span t-esc="slip.date_from.strftime('%B %Y') if slip.date_from else ''"/></span>

                            <t t-set="nb_parts" t-value="slip.line_ids.filtered(lambda l: l.code == 'NB_PARTS')[:1].total"/>
                            <t t-set="tot_paid" t-value="sum(line.total for line in slip.line_ids if line.code == 'TOT_PAID_DAYS')"/>
                            <t t-set="holidays" t-value="sum(line.total for line in slip.line_ids if line.code == 'HOLIDAY_DAYS')"/>
                            <t t-set="nbre" t-value="tot_paid - holidays"/>
                            <t t-set="taux" t-value="nbre / 30 if nbre else 0"/>
                            <t t-set="base" t-value="sum(line.total for line in slip.line_ids if line.code == 'SALAIRE_C_B')"/>
                            <t t-set="gain" t-value="base * taux"/>
                            <t t-set="anc_mnt" t-value="sum(line.total for line in slip.line_ids if line.code == 'ANC_MNT')"/>
                            <t t-set="a_p_imposable" t-value="sum(line.total for line in slip.line_ids if line.code == 'A_P_IMPOSABLE')"/>
                            <t t-set="s_salaire" t-value="sum(line.total for line in slip.line_ids if line.code == 'S_SALAIRE')"/>
                            <t t-set="salaire_c" t-value="sum(line.total for line in slip.line_ids if line.code == 'SALAIRE_C')"/>
                            <t t-set="gain_conge" t-value="sum(line.total for line in slip.line_ids if line.code == 'HOLIDAY_MNT')"/>
                            <t t-set="taux_2" t-value="tot_paid / 30 if tot_paid else 0"/>
                            <t t-set="taux_anc" t-value="sum(line.total for line in slip.line_ids if line.code == 'ANC_TAUX')"/>
                            <t t-set="total_soumis" t-value="gain + anc_mnt + gain_conge + a_p_imposable + s_salaire"/>
                            <t t-set="sbi" t-value="sum(line.total for line in slip.line_ids if line.code == 'BRUT_TOT')"/>
                            <t t-set="its" t-value="sum(line.total for line in slip.line_ids if line.code == 'ITS')"/>
                            <t t-set="cnps_cr" t-value="sum(line.total for line in slip.line_ids if line.code == 'CNPS_CR')"/>
                            <t t-set="caisse_ret" t-value="sum(line.total for line in slip.line_ids if line.code == 'CAISSE_RETRAITE')"/>
                            <t t-set="its_pat" t-value="sum(line.total for line in slip.line_ids if line.code == 'ITS_PAT')"/>
                            <t t-set="taxe_dapp" t-value="sum(line.total for line in slip.line_ids if line.code == 'TAXE_APPRENT')"/>
                            <t t-set="fdfp" t-value="sum(line.total for line in slip.line_ids if line.code == 'FDFP_FPC')"/>
                            <t t-set="nbr_enf" t-value="sum(line.total for line in slip.line_ids if line.code == 'NB_ENF')"/>
                            <t t-set="nbr_maladie" t-value="nbr_enf + 1"/>
                            <t t-set="cmu" t-value="sum(line.total for line in slip.line_ids if line.code == 'CMU')"/>
                            <t t-set="cmu_pat" t-value="sum(line.total for line in slip.line_ids if line.code == 'CMU_PAT')"/>
                            <t t-set="prest_fam" t-value="sum(line.total for line in slip.line_ids if line.code == 'PREST_FAM')"/>
                            <t t-set="ass_mat" t-value="sum(line.total for line in slip.line_ids if line.code == 'ASS_MAT')"/>
                            <t t-set="famille" t-value="prest_fam + ass_mat"/>
                            <t t-set="acc_trav" t-value="sum(line.total for line in slip.line_ids if line.code == 'ACC_TRAV')"/>
                            <t t-set="total_cot" t-value="its + cnps_cr + cmu"/>
                            <t t-set="total_cot1" t-value="caisse_ret + its_pat + taxe_dapp + fdfp + prest_fam + acc_trav + cmu_pat "/>
                            <t t-set="avance_acompte" t-value="sum(line.total for line in slip.line_ids if line.code == 'AVANCE_ACOMPTE')"/>
                            <t t-set="transport" t-value="sum(line.total for line in slip.line_ids if line.code == 'IND_N_IMPOSABLE')"/>
                            <t t-set="arr_plus" t-value="sum(line.total for line in slip.line_ids if line.code == 'ARR_PLUS')"/>
                            <t t-set="arr_moins" t-value="sum(line.total for line in slip.line_ids if line.code == 'ARR_MOINS')"/>
                            <t t-set="gain_brut" t-value="transport + sbi "/>
                            <t t-set="salaire_net" t-value="sum(line.total for line in slip.line_ids if line.code == 'NET')"/>
                            <t t-set="rappel" t-value="sum(line.total for line in slip.line_ids if line.code == 'RAPPEL')"/>

                            <table class="table-container">
                                <tr>
                                    <th>PERIODE DU</th>
                                    <td><span t-field="slip.date_from"/></td>
                                    <th>AU</th>
                                    <td><span t-field="slip.date_to"/></td>
                                    <th>PAYE PAR</th>
                                    <td>Virement</td>
                                </tr>
                                <tr>
                                    <th>MATRICULE</th>
                                    <td><span t-field="slip.employee_id.registration_number"/></td>
                                    <th>EMBAUCHE LE</th>
                                    <td><span t-field="slip.contract_id.date_start"/></td>
                                    <th>ANCIENNETÉ</th>
                                    <td><span t-esc="str(slip.nb_months) + ' mois' if slip.nb_months else ''"/></td>
                                </tr>
                                <tr>
                                    <th>CATEGORIE</th>
                                    <td>#</td>
                                    <th>EMPLOI OCCUPÉ</th>
                                    <td><span t-field="slip.contract_id.job_id"/></td>
                                    <th>DEPARTEMENT</th>
                                    <td><span t-field="slip.contract_id.department_id.name"/></td>
                                </tr>
                                <tr>
                                    <th colspan="2">NOM ET PRÉNOM</th>
                                    <td colspan="2"><span t-field="slip.employee_id.name"/></td>
                                    <th colspan="1"> N° CNPS</th>
                                    <td><span t-field="slip.employee_id.ssnid"/></td>
                                </tr>
                            </table>
                            <table class="table-container">
                                <thead>
                                    <tr>
                                        <th rowspan="2" style="padding: 10px 135px 10px 135px; text-align: center; letter-spacing: 10px;">CONGÉS</th>
                                        <th colspan="2" style="padding: 10px 32px 10px 32px; text-align: center; font-size: 13px;" class="no-wrap">Pris</th>
                                        <th colspan="2" style="padding: 10px 32px 10px 32px; text-align: center; font-size: 13px;" class="no-wrap">Acquis</th>
                                        <th colspan="2" style="padding: 10px 32px 10px 32px; text-align: center; font-size: 13px;" class="no-wrap">Reste à prendre</th>
                                        <th colspan="2" style="padding: 10px 32px 10px 32px; text-align: center; font-size: 13px;" class="no-wrap">Nombre de part</th>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="padding: 3px 32px 3px 32px;"><t t-esc="'{:,}'.format(int(holidays)).replace(',', ' ')"/></td>
                                        <td colspan="2" style="padding: 3px 32px 3px 32px;">#</td>
                                        <td colspan="2" style="padding: 3px 32px 3px 32px;">#</td>
                                        <td colspan="2" style="padding: 3px 32px 3px 32px;"><t t-esc="('%.2f' % nb_parts).replace('.', ',')"/></td>
                                    </tr>
                                </thead>
                            </table>

                            <table class="table3" style="width: 100%;font-family:Courier New, Courier, monospace; font-size:90%">
                                <thead>
                                    <tr>
                                        <th rowspan="2" style="padding: 30px 100px 30px 100px; text-align: center; width: 80% !important">Désignation</th>
                                        <th rowspan="2" style="padding: 10px 20px 10px 20px; text-align: center;" >Nbre</th>
                                        <th rowspan="2" style="padding: 30px 40px 30px 40px; text-align: center;">Base</th>
                                        <th colspan="3" style="padding: 20px 70px 20px 70px; text-align: center;"> Part salariale</th>
                                        <th colspan="2" style="padding: 20px 70px 20px 70px; text-align: center;">Part patronale</th>
                                    </tr>
                                    <tr>
                                        <th style="padding: 20px">Taux</th>
                                        <th style="padding: 40px">Gain</th>
                                        <th style="padding: 20px">Retenue</th>
                                        <th style="padding: 20px">Taux</th>
                                        <th style="padding: 20px">Retenue</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td style="border-right: 1px solid black;border-left: 1px solid black;text-align: left; width: 50% !important; padding-left: 7px;">Salaire de base</td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,}'.format(int(nbre)).replace(',', ' ')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,.2f}'.format(base).replace(',', ' ').replace('.', ',')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="('%.2f' % taux).replace('.', ',')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,}'.format(int(gain)).replace(',', ' ')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;border-left: 1px solid black;"></td>
                                    </tr>
                                    <tr>
                                        <td style="border-right: 1px solid black;border-left: 1px solid black;text-align: left; width: 50% !important; padding-left: 7px;">Avantage en nature</td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;border-left: 1px solid black;"></td>
                                    </tr>
                                    <tr>
                                        <td style="border-right: 1px solid black;border-left: 1px solid black;text-align: left; width: 50% !important; padding-left: 7px;">Prime d'ancienneté</td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,}'.format(int(nbre)).replace(',', ' ')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,.2f}'.format(base).replace(',', ' ').replace('.', ',')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="('%.2f' % taux_anc).replace('.', ',')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,}'.format(int(anc_mnt)).replace(',', ' ')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;border-left: 1px solid black;"></td>
                                    </tr>
                                    <tr>
                                        <td style="border-right: 1px solid black;border-left: 1px solid black;text-align: left; width: 50% !important; padding-left: 7px;">Congés</td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,}'.format(int(holidays)).replace(',', ' ')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,}'.format(int(gain_conge)).replace(',', ' ')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;border-left: 1px solid black;"></td>
                                    </tr>
                                    <t t-if="rappel">
                                        <tr>
                                            <td style="border-right: 1px solid black;border-left: 1px solid black;text-align: left; width: 50% !important; padding-left: 7px;">Rappel</td>
                                            <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                            <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                            <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                            <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,}'.format(int(rappel)).replace(',', ' ')"/></td>
                                            <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                            <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                            <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;border-left: 1px solid black;"></td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td style="border-right: 1px solid black;border-left: 1px solid black;text-align: left; width: 50% !important; padding-left: 7px;">Sursalaire</td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,}'.format(int(tot_paid)).replace(',', ' ')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,.2f}'.format(s_salaire).replace(',', ' ').replace('.', ',')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="('%.2f' % taux_2).replace('.', ',')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,}'.format(int(s_salaire)).replace(',', ' ')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;border-left: 1px solid black;"></td>
                                    </tr>
                                    <tr>
                                        <td style="border-right: 1px solid black;border-left: 1px solid black;text-align: left; width: 50% !important; padding-left: 7px;">Total Soumis</td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px; font-weight: bold; font-size: 13px;"><t t-esc="'{:,}'.format(int(total_soumis)).replace(',', ' ')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;border-left: 1px solid black;"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="8" style="height: 8px; border-right: 1px solid black;border-left: 1px solid black;text-align: left; width: 50% !important; padding-left: 7px;"></td>
                                    </tr>
                                    <tr>
                                        <td style="border-right: 1px solid black;border-left: 1px solid black;text-align: left; width: 50% !important; padding-left: 7px; font-weight: bold;">Salaire Brut Imposable</td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px; font-weight: bold;"><t t-esc="'{:,}'.format(int(sbi)).replace(',', ' ')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;border-left: 1px solid black;"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="8" style="height: 8px; border-right: 1px solid black;border-left: 1px solid black;text-align: left; width: 50% !important; padding-left: 7px;"></td>
                                    </tr>
                                    <tr>
                                        <td style="border-right: 1px solid black;border-left: 1px solid black;text-align: left; width: 50% !important; padding-left: 7px;">ITS</td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,}'.format(int(tot_paid)).replace(',', ' ')"/></td>
                                        <td style="border-right: 1px solid black;text-align: center;padding-right: 10px;"><t t-esc="'{:,}'.format(int(sbi)).replace(',', ' ')"/></td>
