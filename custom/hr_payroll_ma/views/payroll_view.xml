	<record model="ir.ui.view" id="hr_time_payroll_form">
		<field name="name">hr.time.payroll.form</field>
		<field name="model">hr.time.payroll</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Pointage Mensuel">
				<sheet>
					<group>
						<group>
							<field name="payslip_year"/>
							<field name="lines_count"/>
							<field name="description" string="Description"/>
						</group>
						<group>
							<field name="payslip_month"/>
							<field name="state"/>
							<field name="date_from" invisible="1"/>
							<field name="date_to" invisible="1"/>
						</group>
					</group>
					<notebook>
						<page string="Détails du Pointage">
							<field name="payroll_line_ids">
								<list editable="bottom" create="0">
									<field name="employee_id"/>
									<field name="worked_days" invisible="1"/>
									<field name="holiday_days" invisible="1"/>
									<field name="sickness_days" invisible="1"/>
									<field name="absence_days" invisible="1"/>
									<field name="stc_amount" invisible="1"/>
									<field name="stc" invisible="1"/>
									<field name="avance" invisible="1"/>
								</list>
							</field>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>
