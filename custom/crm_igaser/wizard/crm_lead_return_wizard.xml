<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_lead_return_wizard" model="ir.ui.view">
            <field name="name">crm.lead.return.wizard</field>
            <field name="model">crm.lead.return.wizard</field>
            <field name="arch" type="xml">
                <form string="Remettre">
                    <group>
                        <field name="reason" required="1"/>
                    </group>
                    <footer>
                        <button name="return_lead" string="Remettre" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>