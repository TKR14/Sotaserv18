        <field name="model_id" ref="model_hr_assignment_request"/>
        <field name="state">code</field>
        <field name="code">action = model.action_get_user_hr_assignment_requests("SOTASERV_RH")</field>
    </record> -->

    <record id="hr_assignment_request_line_action_rh" model="ir.actions.server">
        <field name="name">Lignes d'affectation</field>
        <field name="model_id" ref="model_hr_assignment_request_line"/>
        <field name="state">code</field>
        <field name="code">action = model.action_get_user_hr_assignment_request_lines("SOTASERV_RH")</field>
    </record>

    <record id="hr_assignment_action_rh" model="ir.actions.server">
        <field name="name">Affectations</field>
        <field name="model_id" ref="model_hr_assignment"/>
        <field name="state">code</field>
        <field name="code">action = model.action_get_user_hr_assignments("SOTASERV_RH")</field>
    </record>

    <record id="hr_assignment_recent_action_rh" model="ir.actions.server">
        <field name="name">Pointages</field>
        <field name="model_id" ref="model_hr_assignment"/>
        <field name="state">code</field>
        <field name="code">action = model.action_recent_timeclock()</field>
    </record>

    <record id="hr_assignment_action_temp" model="ir.actions.server">
        <field name="name">Affectations</field>
        <field name="model_id" ref="model_hr_assignment"/>
        <field name="state">code</field>
        <field name="code">action = model.temp_action_get_user_hr_assignments()</field>
    </record>
</odoo>