<odoo>
    <record id="view_advance_deduction_warning_wizard" model="ir.ui.view">
        <field name="name">advance.deduction.warning.wizard.form</field>
        <field name="model">advance.deduction.warning.wizard</field>
        <field name="arch" type="xml">
            <form string="Avertissement">
                <sheet>
                    <group>
                        <field name="message" readonly="1" nolabel="1" class="text-warning"/>
                    </group>
                    <footer>
                        <button name="action_confirm" type="object" string="Continuer" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>