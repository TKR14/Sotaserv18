<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_building_amendment_create" model="ir.ui.view">
            <field name="name">building.amendment.create.form</field>
            <field name="model">building.amendment.create</field>
            <field name="arch" type="xml">
                <form string="Créer un Avenant">
                	<group>
                    	<field name="site_id" invisible="0"/>
                    	<field name="order_id" invisible="0" />
                        <field name="commercial_id" invisible="0"/>
                  	</group>
                    <group >
                        <field name="line_ids" nolabel="1" readonly="0">
                            <list string="Articles" editable="bottom" mode="list,form">
		              				<field name="product_id" readonly="0" invisible="1"/>
                                    <field name="price_number" readonly="0" string="N° Prix"/>
                                    <field name="name" readonly="0" string="Description"/>
		             				<field name="product_uom_id" readonly="0"/>
		             				<field name="quantity"/>
		             				<field name="price_unit"/>
                                    <field name="order_line_id" invisible="1"/>
                            </list>
                        </field>
                    </group>
                    <footer>
                    	<button name="create_amendment" string="Créer" groups="" type="object" class="oe_highlight"/>
                        or
                        <button string="Annuler" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        

        <record id="building_amendment_create_action" model="ir.actions.act_window">
            <field name="name">Création d'un avenant</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">building.amendment.create</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <!-- <act_window id="action_account_invoice_amendment_create"
            multi="True"
            key2="client_action_multi" name="Créer un Avenant"
            res_model="building.amendment.create" src_model="building.site"
            view_mode="form" target="new" view_type="form" /> -->


    </data>
</openerp>
