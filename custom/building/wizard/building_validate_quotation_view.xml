                        <button string="Annuler" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        

        <record id="building_validate_quotation_action" model="ir.actions.act_window">
            <field name="name">Validation des prix</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">building.validate.quotation</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <act_window name="Validation des Prix"
            res_model="building.validate.quotation"
            src_model="purchase.order.line"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_view_purchase_line_confirm"/>


    </data>
