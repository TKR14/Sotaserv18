<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_building_validate_quotation" model="ir.ui.view">
            <field name="name">building.validate.quotation.form</field>
            <field name="model">building.validate.quotation</field>
            <field name="arch" type="xml">
                <form string="Validation des prix">
                	<group>
                        Validation des prix
                  	</group>
                    <footer>
                    	<button name="validate_quotation" string="Valider" type="object" class="oe_highlight"/>
