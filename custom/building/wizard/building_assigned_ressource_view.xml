<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_assigned_ressource_emp" model="ir.ui.view">
            <field name="name">building.assigned.ressource.emp.form</field>
            <field name="model">building.assigned.ressource</field>
            <field name="arch" type="xml">
                <form string="Créer une affectation RH">
                	<group>
                    	<field name="site_id" invisible="1" domain="[('state', '=', 'open')]" required="1"/>
                    	<field name="start_date"/>
                    	<field name="end_date"/>
                        <field name="categ_assignment" invisible="1"/>
                        <field name="job_ids" invisible="1"/>
                        <field name="list_employee_ids" invisible="1"/>
                        <field name="job_id" invisible="1"/>
                  	</group>
                    <group >
                        <field name="employee_ids" nolabel="1" domain="[('id', 'in', list_employee_ids)]">
                            <list string="Liste des employées">
                                <field name="name" readonly="1" />
                                <field name="registration_number" readonly="1" />
                                <field name="department_id" readonly="1" />
                                <field name="job_id" readonly="1"/>
                                <!-- <field name="timesheet_cost" readonly="1"/> -->
                            </list>
                        </field>
                    </group>
                    <footer>
                    	<button name="create_assigned" string="Créer" groups="" type="object" class="oe_highlight"/>
                        or
                        <button string="Annuler" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>


        <record id="create_assigned_ressource_emp" model="ir.actions.act_window">
            <field name="name">Affecter Employée</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">building.assigned.ressource</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'type_assigned' : 'emp'}</field>
            <field name="view_id" ref="view_assigned_ressource_emp"/>
        </record>

        <record id="view_assigned_ressource_equipement" model="ir.ui.view">
            <field name="name">building.assigned.ressource.equipement.form</field>
            <field name="model">building.assigned.ressource</field>
            <field name="arch" type="xml">
                <form string="Créer une affectation equipement">
                    <group>
                        <group>
                            <field name="available_quantity"/>
                        </group>
                        <group>
                            <field name="qty" readonly="available_quantity == 0"/>
                        </group>
                    </group>
                    <footer>
                        <button name="create_assigned" string="Affecter" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Annuler" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="create_assigned_ressource_equipement" model="ir.actions.act_window">
            <field name="name">Affecter les équipements</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">building.assigned.ressource</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'type_assigned' : 'mini_equipment_site_installation'}</field>
            <field name="view_id" ref="view_assigned_ressource_equipement"/>
        </record>

        <record id="view_assigned_ressource_vehicule" model="ir.ui.view">
            <field name="name">building.assigned.ressource.vehicule.form</field>
            <field name="model">building.assigned.ressource</field>
            <field name="arch" type="xml">
                <form string="Créer une affectation vehicule">
                    <group>
                        <field name="site_id" invisible="1" required="1"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="categ_vehicule_ids" invisible="1"/>
                        <field name="maintenance_request_id" invisible="1"/>
                        <field name="maintenance_request_line_id" invisible="1"/>
                        <field name="categ_vehicule_id" invisible="1"/>
                        <field name="vehicule_ids" widget="many2many_tags" required="1" domain="[('categ_fleet_id', '=', categ_vehicule_id), ('state', '=', 'available')]" options="{'no_create': True, 'no_open': True}"/> <!-- nolabel="1" -->
                    </group>
                    <!-- <group >
                        <field name="vehicule_ids" widget="many2many_tags" nolabel="1" domain="[('categ_fleet_id', '=', categ_vehicule_id), ('state', '=', 'available')]"/>
                            <list>
                                <field name="code" readonly="1" />
                                <field name="license_plate" readonly="1" />
                                <field name="categ_fleet_id" readonly="1" />
                                <field name="attendance_type" readonly="1"/>
                            </list>
                        </field> 
                    </group> -->
                    <footer>
                        <button name="create_assigned" string="Créer" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Annuler" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="create_assigned_ressource_vehicule" model="ir.actions.act_window">
            <field name="name">Affecter Matériel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">building.assigned.ressource</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'type_assigned' : 'equipement'}</field>
            <field name="view_id" ref="view_assigned_ressource_vehicule"/>
        </record>

        <record id="view_assigned_close" model="ir.ui.view">
            <field name="name">building.assigned.close.form</field>
            <field name="model">building.assigned.close</field>
            <field name="arch" type="xml">
                <form string="Fermerr une affectation">
                    <group>
                        <field name="end_date"/>
                        <field name="is_product" invisible="1"/>
                        <field name="location_id" invisible="1"/>
                        <field name="location_dest_id" required="is_product" invisible="not is_product"/>
                        <field name="qty" invisible="not is_product"/>
                    </group>
                    <footer>
                        <button name="close_assigned" string="Valider" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Annuler" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="assigned_close_act" model="ir.actions.act_window">
            <field name="name">Fermer Affectation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">building.assigned.close</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_assigned_close"/>
        </record>

        <record id="view_assigned_product" model="ir.ui.view">
            <field name="name">building.assigned.ressource.product.form</field>
            <field name="model">building.assigned.ressource</field>
            <field name="arch" type="xml">
                <form string="Créer une affectation Coffrage">
                    <group>
                        <field name="site_id" invisible="1" required="1"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="maintenance_request_id" invisible="1"/>
                        <field name="maintenance_request_line_id" invisible="1"/>
                        <field name="product_id" readonly="1" force_save="1"/>
                        <field name="qty"/>
                        <field name="location_id" required="1"/>
                    </group>
                    <footer>
                        <button name="create_assigned" string="Créer" groups="" type="object" class="oe_highlight"/>
                        or
                        <button string="Annuler" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="create_assigned_product" model="ir.actions.act_window">
            <field name="name">Affecter Coffrage/Echaffaudage</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">building.assigned.ressource</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'type_assigned' : 'product'}</field>
            <field name="view_id" ref="view_assigned_product"/>
        </record>

</odoo>
