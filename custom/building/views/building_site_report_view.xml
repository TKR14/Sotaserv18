                    <filter string="10" name="m10" domain="[('month', '=', '10')]"/>
                    <filter string="11" name="m11" domain="[('month', '=', '11')]"/>
                    <filter string="12" name="m12" domain="[('month', '=', '12')]"/>
                    <separator/>
                    <filter string="Prévisionnels" name="forcasteds" domain="[('r0', '=', 'forcated')]"/>
                    <filter string="Réalisations" name="executeds" domain="[('r0', '=', 'executed')]"/>
                    <filter string="Charges" name="loads" domain="[('r0', '=', 'load')]"/>
                    <filter string="Location Interne" name="loads" domain="[('is_rental', '=', False)]"/>
                    <filter string="Location Externe" name="loads" domain="[('is_rental', '=', True)]"/>

                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Année" name='filt_year' domain="[]" context="{'group_by':'year'}"/>
                        <filter string="Mois" name='filt_month' domain="[]" context="{'group_by':'month'}"/>
                        <filter string="Affaire" name='filt_site' domain="[]" context="{'group_by':'site_id'}"/>
                        <filter string="Rubrique" name='filt_r0' domain="[]" context="{'group_by':'r0'}"/>
                        <filter string="Sous Rubrique" name='filt_r1' domain="[]" context="{'group_by':'r1'}"/>
                    </group>
               </search>
            </field>
        </record>

