<?xml version="1.0" encoding="UTF-8"?>
<odoo>        

        <record id="building_executed_report_tree" model="ir.ui.view">
            <field name="name">building.executed.report.tree</field>
            <field name="model">building.executed.report</field>
            <field name="arch" type="xml">
                <list string="Excution" >
                    <field name="year"/>
                    <field name="month"/>
                    <field name="date"/>
                    <field name="site_id"/>
                    <field name="amount_exploitation_charges"/>
                    <field name="forcast_amount_business"/>
                    <field name="amount_forcast_result"/>
                    <field name="previous_day_amount_business"/>
                    <field name="executed_amount_business"/>
                    <field name="amount_result_executed"/>
                    <button name="building_executed_line_tree_view" type="object" string="détails"  class="oe_highlight"/>
                </list>
            </field>
        </record>

        <record id="building_executed_report_filter" model="ir.ui.view">
            <field name="name">building.executed.report.select</field>
            <field name="model">building.executed.report</field>
            <field name="arch" type="xml">
                <search string="Search executed report ">
                    <field name="site_id"/>
                    <field name="year"/>
                    <field name="month"/>
                    <separator/>
                    <filter string="01" name="m1" domain="[('month', '=', '1')]"/>
                    <filter string="02" name="m2" domain="[('month', '=', '2')]"/>
                    <filter string="03" name="m3" domain="[('month', '=', '3')]"/>
                    <filter string="04" name="m4" domain="[('month', '=', '4')]"/>
                    <filter string="05" name="m5" domain="[('month', '=', '5')]"/>
                    <filter string="06" name="m6" domain="[('month', '=', '6')]"/>
                    <filter string="07" name="m7" domain="[('month', '=', '7')]"/>
                    <filter string="08" name="m8" domain="[('month', '=', '8')]"/>
                    <filter string="09" name="m9" domain="[('month', '=', '9')]"/>
                    <filter string="10" name="m10" domain="[('month', '=', '10')]"/>
                    <filter string="11" name="m11" domain="[('month', '=', '11')]"/>
                    <filter string="12" name="m12" domain="[('month', '=', '12')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Année" name='filt_year' domain="[]" context="{'group_by':'year'}"/>
                        <filter string="Mois" name='filt_month' domain="[]" context="{'group_by':'month'}"/>
                        <filter string="Affaire" name='filt_site' domain="[]" context="{'group_by':'site_id'}"/>
                    </group>
               </search>
            </field>
        </record>


        <record id="building_executed_report_action" model="ir.actions.act_window">
            <field name="name">Suivi CA Journalier</field>
            <field name="res_model">building.executed.report</field>
            <field name="view_mode">list</field>
            <field name="search_view_id" ref="building_executed_report_filter"/>
            <field name="context">{'search_default_filt_year':1, 'search_default_filt_month':1, 'search_default_filt_site':1}</field>
        </record>
        

