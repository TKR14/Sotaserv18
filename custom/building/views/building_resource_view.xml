<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        #### Humain resource views ######

        <record id="building_resource_form" model="ir.ui.view">
            <field name="name">building.resource.form</field>
            <field name="model">building.resource</field>
            <field name="arch" type="xml">
                <form string="Ressources">
                    <group colspan="4">
                        <group col="2">
                            <separator string="Ressource Humaine" colspan="2"/>
                            <field name="type_resource" readonly="1" />
                            <field name="name"/>
                            <field name="registration_number" required="type_resource == 'human'"/>
                        </group>
                        <group col="2">
                            <separator string="Profil" colspan="2"  />
                            <field name="profile_id" />
                            <field name="is_employe"/>
		              	    <field name="employee_id" invisible="not is_employe"/>
                        </group>
                    </group>
                     <group colspan="4">
                        <group col="2">
                             <separator string="Coût" colspan="2"/>
                             <field name="schedule_cost"/>
                             <field name="cost_unit" /> <!-- Working Time id is3 -->
                        </group>
                         <group>
                         </group>
                    </group>

                </form>
            </field>
        </record>

        <record id="building_resource_human_tree" model="ir.ui.view">
            <field name="name">building.resource.human.tree</field>
            <field name="model">building.resource</field>
            <field name="arch" type="xml">
                <list string="Ressources">
                    <field name="name" />
                    <field name="type_resource" />
		            <field name="registration_number" />
                    <field name="schedule_cost"/>
                </list>
            </field>
        </record>

        <record id="building_resource_search_human_form" model="ir.ui.view">
            <field name="name">building.resource.human.search.form</field>
            <field name="model">building.resource</field>
            <field name="arch" type="xml">
               <search string="Ressources">
                    <field name="name"/>
                    <field name="registration_number"/>
                </search>
            </field>
        </record>

         #### Material resource views ######

       	<record id="building_resource_material_tree" model="ir.ui.view">
            <field name="name">building.resource.material.tree</field>
            <field name="model">building.resource</field>
            <field name="arch" type="xml">
                <list string="Ressources">
                    <field name="name" />
                    <field name="type_resource" />
                	<field name="serial_number" />
                    <field name="schedule_cost"/>
                </list>
            </field>
        </record>

        <record id="building_resource_material_form" model="ir.ui.view">
            <field name="name">building.resource.materiel.form</field>
            <field name="model">building.resource</field>
            <field name="arch" type="xml">
                <form string="Ressources">
                    <header>
                    </header>
                    <sheet>
                        <group colspan="4">
                            <group col="2">
                                <separator string="Ressource Matérielle" colspan="2"/>
                                <field name="type_resource" readonly="1" />
                                <field name="name"/>
                                <field name="serial_number" required="type_resource == 'material'"/>
                                <field name="category_id" string="Catégorie" on_change="onchange_category_id(category_id)"/>
                            </group>
                        </group>
                        <group colspan="4">
                            <group col="2">
                                 <separator string="Coût" colspan="2"/>
                                 <field name="schedule_cost"/>
                                 <field name="cost_unit" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="building_resource_search_material_form" model="ir.ui.view">
            <field name="name">building.resource.material.search.form</field>
            <field name="model">building.resource</field>
            <field name="arch" type="xml">
               <search string="Ressources">
                    <field name="name"/>
                    <field name="serial_number"/>
                </search>
            </field>
        </record>
        
         #### resource view's actions ######

        <record id="action_building_resource_material" model="ir.actions.act_window">
            <field name="name">Ressources Matérielles</field>
            <field name="res_model">building.resource</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'default_type_resource': 'material'}</field>
            <field name="domain">[('type_resource','=','material')]</field>
            <field name="search_view_id" ref="building_resource_search_material_form"/>

        </record>

        <record model="ir.actions.act_window.view" id="action_building_resource_material_tree">
          <field name="sequence" eval="1"/>
          <field name="view_mode">list</field>
          <field name="view_id" ref="building.building_resource_material_tree"/>
          <field name="act_window_id" ref="action_building_resource_material"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="action_building_resource_material_form">
              <field name="sequence" eval="1"/>
              <field name="view_mode">form</field>
              <field name="view_id" ref="building_resource_material_form"/>
              <field name="act_window_id" ref="action_building_resource_material"/>
        </record>


       
        
        <record id="action_building_resource_human" model="ir.actions.act_window">
            <field name="name">Ressources Humaines</field>
            <field name="res_model">building.resource</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'default_type_resource': 'human'}</field>
            <field name="domain">[('type_resource','=','human')]</field>
            <field name="search_view_id" ref="building_resource_search_human_form"/>
            <field name="view_id" ref="building_resource_human_tree"/>
        </record>

    </data>
</openerp>
