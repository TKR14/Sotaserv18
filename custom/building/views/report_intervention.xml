<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template t-name="building.report_intervention">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <style>
                            .first,
                            th,
                            td {
                                border: 1px solid black;
                                border-collapse: collapse;
                                height: 100px;
                            }

                            .first {
                                border-collapse: collapse;
                                border-radius: 12px;
                                border-style: hidden;
                                box-shadow: 0 0 0 1px black;
                            }

                            .first td {
                                border: 1px solid black;
                            }

                            .first td {
                                border: none;
                            }

                            table.center {
                                margin-left: auto;
                                margin-right: auto;
                            }

                            .second,
                            th,
                            td {
                                border: 1px solid black;
                                border-collapse: separate;
                                border-radius: 12px;
                                height: 20px;
                            }

                            .second td {
                                border: none;
                            }

                            .third,
                            th,
                            td {
                                border: 1px solid black;
                                border-collapse: collapse;
                            }

                            .third td {
                                border: none;
                                padding-left: 10px;
                            }
                        </style>

                        <div class="oe_structure"/>

                        <table class="center first" style="width: 100%; font-size:80%">
                            <tr>
                                <td style="padding-left: 5px;">Etat GMIIMAT311</td>
                                <td></td>
                                <td style="border-right: 1px solid;"></td>
                                <td style="padding-left: 5px;">NO</td>
                                <td>84</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td style="border-right: 1px solid;font-weight: bold;padding-right: 100px;font-size: 25px;">
                                    Rapport
                                    d'intervention</td>
                                <td style="border-bottom: 1px solid;padding-left: 5px;">Page</td>
                                <td style="border-bottom: 1px solid;">1/1</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td style="border-right: 1px solid;"></td>
                                <td style="padding-left: 5px;">M. AIT BELFATMI</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td style="padding-left: 5px;">Dossier 1</td>
                                <td>IGASER S.A.R.L</td>
                                <td style="border-right: 1px solid;"></td>
                                <td style="padding-left: 5px;">Le</td>
                                <td><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')" /></td>
                            </tr>
                        </table>
                        <br/>
                        <table class="center second" style="width: 100%; font-size:80%">
                            <tr>
                                <td>Code matériel</td>
                                <td><span t-field="o.vehicle_id.code" /></td>
                                <td><span t-field="o.vehicle_id.name2" /></td>
                            </tr>
                            <tr>
                                <td>Poste</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Ligne</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Intervention</td>
                                <td><span t-field="o.name" /></td>
                                <td>ENTRETIEN SYSTEMATIQUE</td>
                            </tr>
                            <tr>
                                <td>Description</td>
                                <td><span t-field="o.description" /></td>
                                <td></td>
                            </tr>
                        </table>
                        <br/>
                        <table class="center third" style="width: 100%; font-size:80%">
                            <tr style="border-bottom: 1px solid;">
                                <td style="font-weight: bold;padding: 5px;">Réalisation</td>
                                <td colspan="4"></td>
                            </tr>
                            <tr>
                                <td>Date début réalisation</td>
                                <td style="font-weight: bold;"><span t-field="o.start_date" /></td>
                                <td>Date d'arrêt</td>
                                <td><span t-field="o.stopping_date" /></td>
                                <td style="font-weight: bold;">Arrêt du matériel</td>
                            </tr>
                            <tr>
                                <td>Date fin réalisation</td>
                                <td style="font-weight: bold;"><span t-field="o.schedule_date" /></td>
                                <td>Durée de l'intervention  <span t-field="o.duration" />( Heurs)</td>
                                <td>Priorité</td>
                                <td><span t-field="o.priority" /></td>
                            </tr>
                            <tr>
                                <td>Compteur</td>
                                <td colspan="4"><span t-field="o.uom_id.name" /></td>
                            </tr>
                            <tr>
                                <td>Valeur compteur</td>
                                <td colspan="4"><span t-field="o.odometre" /></td>
                            </tr>
                            <tr>
                                <td>Localisation</td>
                                <td><span t-field="o.site_id.name" /></td>
                                <td colspan="3"></td>
                            </tr>
                            <tr>
                                <td>Type document</td>
                                <td colspan="4"></td>
                            </tr>
                            <tr>
                                <td>Numéro document</td>
                                <td colspan="4"></td>
                            </tr>
                            <tr>
                                <td>Indice document</td>
                                <td colspan="4"></td>
                            </tr>
                            <tr>
                                <td>Collaborateur</td>
                                <td>M.AITBELFATMI</td>
                                <td>AIT BELFATMI MOHAMED</td>
                                <td colspan="2"></td>
                            </tr>
                            <tr>
                                <td>Participants</td>
                                <td colspan="4"></td>
                            </tr>
                            <tr>
                                <td>Référence enregistrement</td>
                                <td colspan="4"></td>
                            </tr>
                            <tr style="border-bottom: 1px solid;border-top: 1px solid;">
                                <td style="font-weight: bold;padding: 5px;">Sous-traitance</td>
                                <td colspan="4"></td>
                            </tr>
                            <tr>
                                <td>Fournisseur</td>
                                <td colspan="4"><span t-field="o.partner_id.name" /></td>
                            </tr>
                            <tr>
                                <td>Numéro commande</td>
                                <td colspan="4"><span t-field="o.order_num" /></td>
                            </tr>
                            <tr>
                                <td>Numéro BL</td>
                                <td colspan="4"><span t-field="o.pick_num" /></td>
                            </tr>
                            <tr>
                                <td>Numéro contrat</td>
                                <td colspan="4"><span t-field="o.contract_num" /></td>
                            </tr>
                            <tr style="border-bottom: 1px solid;border-top: 1px solid;">
                                <td style="font-weight: bold;padding: 5px;">Coûts</td>
                                <td colspan="4"></td>
                            </tr>
                            <tr>
                                <td>Coût interne</td>
                                <td colspan="4"><span t-field="o.cost" /></td>
                            </tr>
                            <tr>
                                <td>Coût externe</td>
                                <td colspan="4"><span t-field="o.external_cost" /></td>
                            </tr>
                            <tr>
                                <td>Coût arrêt</td>
                                <td colspan="4"><span t-field="o.stopping_cost" /></td>
                            </tr>
                            <tr>
                                <td colspan="5" style="padding-left:5px;">
                                    <div style="height: 130px; overflow:hidden;">
                                    </div>
                                </td>
                            </tr>
                            <tr style="border-top: 1px solid;">
                                <td style="padding: 18px;">Validé le</td>
                                <td><span t-field="o.request_date" /></td>
                                <td>Par</td>
                                <td>M. AIT BELFATMI</td>
                                <td></td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>