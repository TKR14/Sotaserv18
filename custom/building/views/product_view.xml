<?xml version="1.0" encoding="UTF-8"?>
<odoo>      
    <record id="view_product_building_inherit" model="ir.ui.view">
        <field name="name">product.template.building.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div>
                    <field name="is_material" invisible="type != 'product'"/>
                    <label for="is_material" invisible="type != 'product'"/>
                </div>
                <div>
                    <field name="is_conso" invisible="type != 'product'"/>
                    <label for="is_conso" invisible="type != 'product'"/>
                </div>
            </div>
        </field>
    </record>

    <record id="product_category_form_view_building__inherit" model="ir.ui.view">
        <field name="name">product.category.form.building.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="is_fuel"/>
            </field>
        </field>
    </record>

    <record id="product_template_readonly_rule" model="ir.rule">
        <field name="name">Product Template Readonly</field>
        <field name="model_id" ref="product.model_product_template"/> 
        <field name="global" eval="True"/> 
        <field name="domain_force">[('in_template', '!=', True)]</field> 
        <field name="perm_read" eval="False"/> 
        <field name="perm_create" eval="False"/> 
        <field name="perm_write" eval="True"/> 
        <field name="perm_unlink" eval="True"/> 
        <field name="active" eval="False"/> 
    </record>
</odoo>