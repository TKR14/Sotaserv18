            </xpath>
            <xpath expr="//field[@name='line_ids']/list/field[@name='duree_available']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/list/field[@name='duration']" position="attributes">
