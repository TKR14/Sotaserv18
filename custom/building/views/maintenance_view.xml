<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Equipment form view -->
    <record model="ir.ui.view" id="maintenance_request_resource_material_form_view">
        <field name="name">maintenance.request.resource.material.form</field>
        <field name="model">maintenance.request.resource.material</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="gasoil">
                <header>
                    <button name="action_requested" string="Valider" class="oe_highlight" type="object"  
                        invisible="state != 'draft'" groups="building_plus.sotaserv_chef_projet,building_plus.sotaserv_conduct_trv"/>
                    <button name="action_open_set_draft_wizard" string="Remettre" class="oe_highlight" type="object"  
                        invisible="state != 'validated'" groups="building_plus.sotaserv_directeur_zone"/>
                    <button name="action_dlm" string="Approuver" class="oe_highlight" type="object"  
                        invisible="state != 'validated'" groups="building_plus.sotaserv_directeur_zone"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <field name="site_ids" invisible="1"/>
                    <field name="is_equipment" invisible="1"/>
                    <field name="is_equip" invisible="1"/>
                    <div class="oe_edit_only">
                        <label for="name" class="oe_inline"/>
                    </div>
                    <h1>
                        <field name="name" readonly="1" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="requested_by" options="{'no_create': True, 'no_open': True}" readonly="1" force_save="1"/>
                            <field name="site_id" readonly="state != 'draft'" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="request_date" readonly="state != 'draft'"/>
                            <field name="description" readonly="state != 'draft'"/>
                            <field name="vehicle_ids" invisible="1"/>
                            <field name="fleet_vehicle_ids" invisible="1"/>
                            <field name="is_open" invisible="1" readonly="1"/>
                            <field name="is_open_1"  invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Demandes">
                            <field name="line_ids" nolabel="1" readonly="state != 'draft' or not site_id" options="{'no_open': [('state', '!=', 'draft')]}">
                                <list string="Demandes" editable="bottom">
                                    <field name="type" string="Nature" invisible="1"/>
                                    <field name="categ_vec_id" domain="[('id', 'in', parent.vehicle_ids)]" readonly="not type or type != 'equipment'" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="code"  invisible="1"/>
                                    <field name="request_type" invisible="1"/>
                                    <field name="qty"/>
                                    <field name="qty_available" class="oe_edit_only" string="Qté disponible"/>
                                    <field name="shipping_date"/>
                                    <field name="duration"/>
                                    <field name="duree_available" readonly="1" class="oe_edit_only"/>
                                    <field name="rental_type" readonly="0"/>
                                    <field name="note" invisible="1"/>
                                    <field name="quantity_affected" readonly="1"/>
                                    <field name="estimated_cost" readonly="1" force_save="1"/>
                                    <!-- <field name="is_open"  readonly="1"/> -->
                                    <!-- <field name="state"  readonly="1"/> -->
                                    <!-- <button name="action_affected" string="Affecter" class="oe_highlight" type="object" invisible="not is_open or state != 'dga'"/> -->
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right" invisible="context.get('is_siege')">
                                <field name="currency_id" invisible="1" can_create="true" can_write="true" modifiers="{'invisible':true,'readonly':true}"/>
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="estimated_cost" string="Coût total estimé"/>
                                </div>
                                <field name="estimated_cost" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}" modifiers="{'readonly':true}" id="estimated_cost"/>
                            </group>
                       </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Petit equipment form view -->
    <record model="ir.ui.view" id="maintenance_request_resource_small_material_form_view">
