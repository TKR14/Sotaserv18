    <!-- SEARCH -->
    <!-- purchase.request.line -->
    <record id="purchase_request_line_view_search" model="ir.ui.view">
        <field name="name">purchase.request.line.view.search</field>
        <field name="model">purchase.request.line</field>
        <field name="arch" type="xml">
            <search>
                <!-- Search fields -->
                <field name="request_id"/>
                <field name="product_id"/>
                <field name="name"/>
                <field name="supplier_id"/>
                <field name="state"/>

                <!-- Default fields -->
                <filter name="approved" string="Approuvée" domain="[('state', '=', 'approved')]"/>
                <filter name="purchase_validated" string="Achat validé"
                    domain="[('state', '=', 'purchase_validated')]"/>
                <filter name="transfer_validated" string="Transfert validé"
                    domain="[('state', '=', 'transfer_validated')]"/>
                <filter name="price_request_established" string="Demande de prix établie"
                    domain="[('state', '=', 'price_request_established')]"/>
                <filter name="order_established" string="Commande établie"
                    domain="[('state', '=', 'order_established')]"/>
                <filter name="transfer_established" string="Transfert établi"
                    domain="[('state', '=', 'transfer_established')]"/>
                <filter name="receiving" string="Réception en cours"
                    domain="[('state', '=', 'receiving')]"/>
                <filter name="received" string="Réception faite"
                    domain="[('state', '=', 'received')]"/>
                <filter name="invoiced" string="Facture établie"
                    domain="[('state', '=', 'invoiced')]"/>
                <filter name="invoice_paid" string="Facture payée"
                    domain="[('state', '=', 'invoice_paid')]"/>
                <filter name="closed" string="Clôturée" domain="[('state', '=', 'closed')]"/>
                <filter name="rejected" string="Rejetée" domain="[('state', '=', 'rejected')]"/>

                <!-- Grouping fields -->
                <filter name="group_request_id" string="Demande d'achat" context="{'group_by': 'request_id'}"/>
                <filter name="group_product_id" string="Article" context="{'group_by': 'product_id'}"/>
                <filter name="group_name" string="Description" context="{'group_by': 'name'}"/>
                <filter name="group_supplier_id" string="Fournisseur" context="{'group_by': 'supplier_id'}"/>
                <filter name="group_state" string="Statut" context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>
    <!-- FORM -->
    <!-- purchase.request -->
    <record id="purchase_request_view_form" model="ir.ui.view">
        <field name="name">purchase.request.view.form</field>
        <field name="model">purchase.request</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form class="purchase_request_view_form">
                <header>
                    <field name="to_reject" invisible="1"/>

                    <button
                        name="button_draft"
                        type="object"
                        string="Remettre en brouillon"
                        class="btn-secondary"
                        groups="purchase_igaser.purchase_request_group_to_approve"
                        invisible="state not in ['to_approve', 'rejected'] or note != ''"
                   />
                    <button
                        name="button_note"
                        type="object"
                        string="Motif du refus"
                        class="btn-secondary"
                        groups="purchase_igaser.purchase_request_group_to_approve"
                        invisible="state != 'rejected' or note == ''"
                   />
                    <button
                        name="button_to_approve"
                        type="object"
                        string="Valider"
                        invisible="state != 'draft'"
                        class="btn-primary"
                        groups="purchase_igaser.purchase_request_group_to_approve"
                   />
                    <button
                        name="button_approved"
                        type="object"
                        string="Approuver"
                        invisible="state != 'to_approve'"
                        class="btn-primary"
                        groups="purchase_igaser.purchase_request_group_approved"
                   />
                    <button
                        name="button_reject"
                        type="object"
                        string="Rejeter"
                        invisible="not to_reject"
                        class="btn-danger"
                        groups="purchase_igaser.purchase_request_group_approved"
                   />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,to_approve,approved"
                   />
                </header>
                <sheet>
                    <field name="is_siege_pr" invisible="1" />
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_purchase_request_line" type="object"
                            class="oe_stat_button" invisible="line_count == 0"
                            icon="fa-list">
                            <field name="line_count" widget="statinfo" string="Lignes" readonly="1"/>
                        </button>
                        <button name="action_view_purchase_order" type="object"
                            class="oe_stat_button"
                            invisible="purchase_count == 0"
                            icon="fa-shopping-cart">
                            <field name="purchase_count" widget="statinfo" string="Demandes d'achat"
                                readonly="1"/>
                        </button>
                        <button name="action_view_stock_picking" type="object" class="oe_stat_button"
                            invisible="move_count == 0" icon="fa-truck">
                            <field name="move_count" widget="statinfo" string="Stock Moves"
                                readonly="1"/>
                        </button>
                    </div>
                    <div class="oe_edit_only">
                        <label for="name" class="oe_inline"/>
                    </div>
                    <h1>
                        <field name="name" readonly="1" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="note" invisible="1"/>
                            <field name="requested_by" options="{'no_create': True, 'no_open': True}" readonly="1" force_save="1"/>
                            <field name="site_id" readonly="state != 'draft'" options="{'no_create': True, 'no_open': True}" />
                        </group>
                        <group>
                            <field name="date_start" readonly="1"/>
                            <field name="date_approval"/>
                            <field name="description" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lignes">
                            <field name="need_product_ids" invisible="1"/>
                            <field name="line_ids" readonly="state != 'draft' or not site_id">
                                <list editable="bottom" decoration-muted="state == 'canceled'">
                                    <field name="product_id" required="1" domain="[('id', 'in', parent.need_product_ids), ('categ_id.category_type', '=', 'other')]" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="name" readonly="not product_id"/>
                                    <field name="product_qty" required="1" readonly="not product_id"/>
                                    <field name="available_quantity" readonly="1" force_save="1" invisible="context.get('is_siege')" class="oe_edit_only"/>
                                    <field name="product_uom_id" readonly="1" force_save="1" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="assigned_to" readonly="1" force_save="1" options="{'no_create': True, 'no_open': True}" string="Acheteur"/>
                                    <field name="estimated_cost" readonly="1" force_save="1" invisible="context.get('is_siege')"/>
                                    <field name="cost" column_invisible="not parent.is_siege_pr"/>
                                    <field name="state" invisible="1"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right" invisible="context.get('is_siege')">
                                <field name="currency_id" invisible="1" can_create="true" can_write="true" modifiers="{'invisible':true,'readonly':true}"/>
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="estimated_cost" string="Coût total estimé"/>
                                </div>
                                <field name="estimated_cost" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}" modifiers="{'readonly':true}" id="estimated_cost"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread" id="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <!-- note -->
    <record id="purchase_request_view_form_note" model="ir.ui.view">
        <field name="name">purchase.request.view.form.note</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="note" readonly="context.get('draft')" nolabel="1"/>
                </sheet>
                <footer>
                    <button name="button_rejected" type="object" string="Rejeter" class="btn-danger"
                        invisible="not context.get('rejected')"/>
                    <button name="button_draft" type="object" string="Remettre en brouillon"
                        class="btn-primary" invisible="not context.get('draft')"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- res.groups -->
    <record id="res_groups_view_form_cost_center" model="ir.ui.view">
        <field name="name">res.groups.view.form.cost.center</field>
        <field name="model">res.groups</field>
        <field name="arch" type="xml">
            <form class="res_groups_view_form_cost_center">
                <sheet>
                    <group>
                        <field name="name" string="Centre de coût"/>
                    </group>
                    <notebook>
                        <page string="Utilisateurs">
                            <field name="users">
                                <list editable="bottom" create="0">
                                    <field name="name" readonly="1"/>
                                    <field name="login" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE -->
    <!-- purchase.request -->
    <record id="purchase_request_view_tree" model="ir.ui.view">
        <field name="name">purchase.request.view.list</field>
        <field name="model">purchase.request</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <list string="Demande d'achat" 
                decoration-info="state == 'draft'" 
                decoration-danger="state == 'rejected'" 
                decoration-muted="state == 'canceled'">
                
                <field name="message_needaction" column_invisible="True"/>
                
                <field name="name"/>
                <field name="requested_by" widget="many2one_avatar_user"/>
                <field name="site_id"/>
                <field name="date_approval"/>
                
                <field name="state" 
                    widget="badge"
                    decoration-info="state == 'draft'"
                    decoration-warning="state == 'to_approve'"
                    decoration-success="state == 'approved'"
                    decoration-danger="state == 'rejected'"
                    decoration-muted="state == 'canceled'"
                />
            </list>
        </field>
    </record>
    <!-- purchase.request.line -->
    <record id="purchase_request_line_view_tree" model="ir.ui.view">
        <field name="name">purchase.request.line.view.tree</field>
        <field name="model">purchase.request.line</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <list string="Lignes de demande d'achat" class="purchase_request_line_view_tree_class"
                decoration-info="state == 'draft'"
                decoration-danger="state == 'rejected'"
                decoration-muted="state == 'purchase_validated' and has_pr"
            >
                <field name="has_pr" invisible="1"/>
                <field name="date_approval"/>
                <field name="request_id"/>
                <field name="product_id"/>
                <field name="name"/>
                <field name="supplier_id" string="Fournisseur"/>
                <field name="product_qty"/>
                <field name="product_uom_id"/>
                <field name="estimated_cost" widget="monetary" invisible="context.get('is_siege')"/>
                <field name="currency_id" invisible="1"/>
                <field name="requested_by" widget="many2one_avatar_user"/>
                <field name="assigned_to" widget="many2one_avatar_user" string="Acheteur"/>
                <field name="write_uid" widget="many2one_avatar_user" string="Mise à jour par"/>
                <field name="state" widget="badge"
                    decoration-info="state == 'draft'"
                    decoration-warning="state == 'validated'"
                    decoration-success="state == 'approved'"
                    decoration-danger="state == 'rejected'"
                />
            </list>
        </field>
    </record>
    <!-- res.groups -->
    <record id="res_groups_view_tree" model="ir.ui.view">
        <field name="name">res.groups.view.tree</field>
        <field name="model">res.groups</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Nom du groupe"/>
            </list>
        </field>
    </record>
    <record id="res_groups_view_tree_cost_center" model="ir.ui.view">
        <field name="name">res.groups.view.tree.cost.center</field>
        <field name="model">res.groups</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Centre de coût"/>
            </list>
        </field>
    </record>

    <record id="purchase_request_action_buyer" model="ir.actions.act_window">
        <field name="name">Lignes de demande d'achat</field>
        <field name="res_model">purchase.request.line</field>
        <field name="view_mode">list</field>
        <field name="domain">
            [
                '|', '|', 
                ('chargeby_id', '=', uid),
                ('product_id.categ_id.supervisor_ids', '=', uid),
                '&amp;', '|',
                '&amp;',
                ('product_id.categ_id.secondary_buyer_ids', '=', uid),
                ('product_id.categ_id.buyers_count', '=', 0),
                ('product_id.categ_id.buyer_ids.user_id', '=', uid),
                ('state', 'not in', ['draft', 'validated'])
            ]
        </field>
        <field name="search_view_id" ref="purchase_request_line_view_search"/>
        <field name="context">
            {
                "search_default_product_category_id": True,
                "search_default_approved": 1, "search_default_purchase_validated": 1,
                "search_default_transfer_validated": 1, "search_default_price_request_established": 1,
                "search_default_order_established": 1, "search_default_transfer_established": 1,
                "search_default_group_state_id": 1,
            }
        </field>
        <field name="view_ids" eval="
            [
                (5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('purchase_igaser.purchase_request_line_view_tree')}),
            ]
        "/>
    </record>

