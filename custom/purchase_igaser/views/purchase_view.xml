<?xml version="1.0"?>
<odoo>

    <record model="ir.ui.view" id="purchase_order_form_inherit2">
        <field name="name">purchase.order.form.inherit2</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="before">
                <field name="offer_validity"/>
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="replace">
                <field name="partner_ref" string="Devis N°"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="payment_method_id" domain="[('payment_type', '=', 'outbound')]"/>
                <field name="delivery_method"/>
                <field name="guaranty_str"/>
                <field name="delivery_time"/>
                <field name="available_str"/>
                <field name="price_comparison_id"/>
            </xpath>
            <xpath
                expr="//field[@name='order_line']/list/field[@name='name']"
                position="after">
                <field name="note" optional="hide"/>
            </xpath>
            <xpath
                expr="//field[@name='order_line']/list/field[@name='price_subtotal']"
                position="after">
                <field name="product_description_variants" string="Destination"/>
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="contact_id"/>
                <field name="commercial_id"/>
            </xpath>
        </field>
    </record>

    <record id="purchase_line_comparison_tree" model="ir.ui.view">
        <field name="name">purchase.order.line.comparison.tree</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <list string="Comparaison des lignes" editable="bottom" edit="1" create="0">
                <field name="product_id"/>
                <field name="partner_id"/>
                <field name="price_unit"/>
                <field name="date_planned"/>
                <field name="name" string="Commentaire"/>
                <field name="product_qty"/>
            </list>
        </field>
    </record>

    <record id="purchase_line_comparison_filter" model="ir.ui.view">
        <field name="name">purchase.order.line.comparison.select</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <search string="Search building purchase line">
                <field name="partner_id" operator="child_of"/>
                <field name="product_id"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="partner_filt" string="Fournisseur" domain="[]"
                        context="{'group_by':'partner_id'}"/>
                    <filter name="product_filt" string="Produit" domain="[]"
                        context="{'group_by':'product_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="purchase_line_comparison_action" model="ir.actions.act_window">
        <field name="name">Comparaison des lignes des offres</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_mode">list</field>
        <field name="domain">[('state','=','draft')]</field>
        <field name="search_view_id" ref="purchase_line_comparison_filter"/>
    </record>

    <record id="purchase_price_comparison_form" model="ir.ui.view">
        <field name="name">purchase.price.comparison.form</field>
        <field name="model">purchase.price.comparison</field>
        <field name="arch" type="xml">
            <form string="comparison" create="0" delete="false">
                <field name="action_buyer_validated_visible" invisible="1"/>
                <field name="dg_validated" invisible="1"/>
                <header>
                    <button name="action_purchase_validated" type="object" string="Valider"
                        class="oe_highlight"
                        invisible="not action_buyer_validated_visible"/>
                    <button name="action_purchase_cancel" type="object" string="Annuler"
                        class="btn-secondary"
                        invisible="not action_buyer_validated_visible or dg_validated"/>
                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,purchase_validation"/>
                </header>
                <sheet>
                    <group colspan="4">
                        <group col="2">
                            <field name="name"
                                readonly="state in ['dg_validation', 'purchase_validation']"/>
                            <field name="date_comparison"
                                readonly="state in ['dg_validation', 'purchase_validation']"/>
                            <field name="date_decision"
                                readonly="state in ['dg_validation', 'purchase_validation']"/>
                        </group>
                        <group col="2">
                            <field name="order_id" domain="[('id', 'in', po_ids)]" readonly="state in ['dg_validation', 'purchase_validation']"/>
                            <field name="partners" invisible="1"/>
                            <field name="purchase_order_code" readonly="1"/>
                            <field name="reason" readonly="1" invisible="state != 'po_canceled'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Offres" ame="offer_tab">
                            <field name="po_ids" readonly="state in ['dg_validation', 'purchase_validation']" options="{'no_create': True, 'no_open': True}">
                                <list string="Offres" editable="bottom" create="0">
                                    <field name="company_id" invisible="1"/>
                                    <field name="state" invisible="1"/>
                                    <field name="name" readonly="1" force_save="1"/>
                                    <field name="partner_id"
                                        options="{'no_create': True, 'no_open': True}"/>
                                    <field name="payment_method_id"
                                        domain="[('payment_type', '=', 'outbound')]"/>
                                    <field name="payment_term_id"/>
                                    <field name="delivery_method"/>
                                    <field name="guaranty_str"/>
                                    <field name="delivery_time"/>
                                    <field name="available_str"/>
                                    <field name="offer_validity"/>
                                    <field name="amount_untaxed"/>
                                </list>
                            </field>
                        </page>
                        <page string="Lignes des offres" ame="offer_lines_tab">
                            <field name="po_lines" readonly="state in ['dg_validation', 'purchase_validation']" options="{'no_create': True, 'no_open': True}">
                                <list string="Lignes" editable="bottom" create="0">
                                    <field name="company_id" invisible="1"/>
                                    <field name="state" invisible="1"/>
                                    <field name="product_id" readonly="1" force_save="1"/>
                                    <field name="partner_id"/>
                                    <field name="product_qty" readonly="1" force_save="1"/>
                                    <field name="price_unit"/>
                                    <field name="taxes_id" widget="many2many_tags"/>
                                    <field name="date_planned" invisible="1"/>
                                    <field name="is_available"/>
                                    <field name="with_technical_sheet"/>
                                    <field name="note"/>
                                </list>
                            </field>
                        </page>
                        <page string="Recommandations" ame="offer_reccomendation_tab">
                            <field name="recommendations"
                                readonly="state in ['dg_validation', 'purchase_validation']">
                                <list string="Recommandations" editable="bottom">
                                    <field name="name"/>
                                    <field name="partner_id"
                                        domain="[('id', 'in', parent.partners)]"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>


    <record id="purchase_price_comparison_form_readonly" model="ir.ui.view">
        <field name="name">purchase.price.comparison.form.readonly</field>
        <field name="model">purchase.price.comparison</field>
        <field name="arch" type="xml">
            <form string="comparison" create="0" delete="false" class="no_open_form">
                <field name="action_buyer_validated_visible" invisible="1"/>
                <field name="dg_validated" invisible="1"/>
                <header>
                    <button name="action_purchase_validated" type="object" string="Valider"
                        class="oe_highlight"
                        invisible="not action_buyer_validated_visible"/>
                    <button name="action_purchase_cancel" type="object" string="Annuler"
                        class="btn-secondary"
                        invisible="not action_buyer_validated_visible or dg_validated"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,purchase_validation"/>
                </header>
                <sheet>
                    <group colspan="4">
                        <group col="2">
                            <field name="name"
                                readonly="state in ['dg_validation', 'purchase_validation']"/>
                            <field name="date_comparison"
                                readonly="state in ['dg_validation', 'purchase_validation']"/>
                            <field name="date_decision"
                                readonly="state in ['dg_validation', 'purchase_validation']"/>
                        </group>
                        <group col="2">
                            <field name="order_id" domain="[('id', 'in', po_ids)]" readonly="state in ['dg_validation', 'purchase_validation']" options="{'no_open': True}"/>
                            <field name="partners" invisible="1"/>
                            <field name="purchase_order_code" readonly="1"/>
                            <field name="reason" readonly="1" invisible="state != 'po_canceled'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Offres" name="offer_tab">
                            <field name="po_ids" class="no_open" readonly="state in ['dg_validation', 'purchase_validation']" options="{'no_create': True, 'no_open': True}">
                                <list string="Offres" editable="bottom" create="0">
                                    <field name="company_id" invisible="1"/>
                                    <field name="state" invisible="1"/>
                                    <field name="name" readonly="1" force_save="1" options="{'no_open': True}"/>
                                    <field name="partner_id" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="payment_method_id" domain="[('payment_type', '=', 'outbound')]"/>
                                    <field name="payment_term_id"/>
                                    <field name="delivery_method"/>
                                    <field name="guaranty_str"/>
                                    <field name="delivery_time"/>
                                    <field name="available_str"/>
                                    <field name="offer_validity"/>
                                    <field name="amount_untaxed"/>
                                </list>
                            </field>
                        </page>
                        <page string="Lignes des offres" name="offer_lines_tab">
                            <field name="po_lines" readonly="state in ['dg_validation', 'purchase_validation']" options="{'no_create': True, 'no_open': True}">
                                <list string="Lignes" editable="bottom" create="0">
                                    <field name="company_id" invisible="1"/>
                                    <field name="state" invisible="1"/>
                                    <field name="product_id" readonly="1" force_save="1" options="{'no_open': True}"/>
                                    <field name="partner_id" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="product_qty" readonly="1" force_save="1"/>
                                    <field name="price_unit" options="{'no_open': True}"/>
                                    <field name="date_planned" invisible="1"/>
                                    <field name="is_available" options="{'no_open': True}"/>
                                    <field name="with_technical_sheet" options="{'no_open': True}"/>
                                    <field name="note" options="{'no_open': True}"/>
                                </list>
                            </field>
                        </page>
                        <page string="Recommandations" name="offer_reccomendation_tab">
                            <field name="recommendations"
                                readonly="state in ['dg_validation', 'purchase_validation']">
                                <list string="Recommandations" editable="bottom">
                                    <field name="name"/>
                                    <field name="partner_id"
                                        domain="[('id', 'in', parent.partners)]"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                    </notebook>


                </sheet>
            </form>
        </field>
    </record>

