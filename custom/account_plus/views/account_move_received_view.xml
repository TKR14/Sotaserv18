<odoo>
    <record id="account_move_action_validated" model="ir.actions.act_window">
        <field name="name">Factures</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('move_type', '=', 'in_invoice')]</field>
        <field name="context">{"delete": False, "create": False, "hide_actions":True, "search_default_status": True}</field>
    </record>

    <record id="account_move_action_daf" model="ir.actions.act_window">
        <field name="name">Factures</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('move_type', '=', 'in_invoice')]</field>
        <field name="context">{"delete": False, "edit": False, "create": False, "hide_actions":True, "search_default_status": True}</field>
    </record>

    <record id="account_move_action_avoir_validated" model="ir.actions.act_window">
        <field name="name">Avoirs</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('move_type', '=', 'in_refund')]</field>
        <field name="context">{"delete": False, "create": False, "default_move_type": "in_refund", "hide_actions":True,}</field>
    </record>

    <record id="account_move_action_avoir_daf" model="ir.actions.act_window">
        <field name="name">Avoirs</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('move_type', '=', 'in_refund')]</field>
        <field name="context">{"delete": False, "create": False, "edit": False, "default_move_type": "in_refund", "hide_actions":True,}</field>
    </record>

    <record id="account_move_client_action_validated" model="ir.actions.act_window">
        <field name="name">Factures</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('move_type', '=', 'out_invoice')]</field>
        <field name="context">{"delete": False, "create": False, "hide_actions":True, "search_default_out_state": True}</field>
    </record>

    <record id="account_move_action_aud" model="ir.actions.act_window">
        <field name="name">Factures</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[("move_type", "=", "in_invoice"), ("state", "!=", "blocked")]</field>
        <field name="context">{"delete": False, "create": False, "edit": False, "hide_actions":True, "search_default_status": True}</field>
    </record>

    <record id="account_move_blocked_action_aud" model="ir.actions.act_window">
        <field name="name">Factures bloquées</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[("move_type", "=", "in_invoice"), ("state", "=", "blocked")]</field>
        <field name="context">{"delete": False, "create": False, "edit": True, "hide_actions":True, "search_default_status": True}</field>
    </record>

    <record id="account.action_move_in_invoice_type" model="ir.actions.act_window">
        <field name="context">{'default_move_type': 'in_invoice', "delete": False, "hide_actions":True, "search_default_status": True}</field>
    </record>

    <!-- Contrôle de Gestion -->
    <menuitem
        id="account_move_menu_validated"
        name="Contrôle de Gestion"
        groups="account_plus.acount_move_group_cg"
        sequence="0"
    />

    <menuitem
        id="menu_decompt_view_cg_readonly"
        name="Décompte fournisseur"
        parent="account_move_menu_validated"
        action="purchase_plus.action_purchase_entry_decompt_readonly"
        sequence="1"
    />

    <menuitem
        id="account_move_menu_cg_factures"
        name="Facturation"
        groups="account_plus.acount_move_group_cg"
        parent="account_move_menu_validated"
        sequence="2"
    />

    <menuitem
        id="account_move_supplaier_inv_cg"
        name="Factures fournisseurs"
        parent="account_move_menu_cg_factures"
        sequence="10"
    />

    <menuitem
        id="account_move_menu_factures_validated"
        name="Factures"
        parent="account_move_supplaier_inv_cg"
        action="account_move_action_validated"
        sequence="10"
    />

    <menuitem
        id="account_move_menu_avoire_validated"
        name="Avoirs"
        parent="account_move_supplaier_inv_cg"
        action="account_move_action_avoir_validated"
        sequence="10"
    />

    <menuitem
        id="account_move_client_menu_factures_cg"
        name="Factures clients"
        parent="account_move_menu_cg_factures"
        sequence="20"
    />

    <menuitem
        id="account_move_client_invoices_validated"
        name="Factures"
        parent="account_move_client_menu_factures_cg"
        action="account_move_client_action_validated"
        sequence="10"
    />

    <menuitem
        id="account_move_menu_commades_cg"
        name="Commandes"
        parent="account_move_menu_validated"
    /> 
</odoo>