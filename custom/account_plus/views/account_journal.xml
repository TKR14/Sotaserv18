<odoo>
    <record id="account_journal_view_form_inherit" model="ir.ui.view">
        <field name="name">account.journal.view.form.inherit</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <page name="advanced_settings" position="after">
                <page name="checkbooks" string="Chéquiers" invisible="type != 'bank'">
                    <field name="checkbook_ids" options="{'no_open': True}">
                        <list editable="bottom">
                            <field name="is_locked" invisible="1"/>
                            <field name="number" readonly="is_locked"/>
                            <field name="start" readonly="is_locked"/>
                            <field name="size" readonly="is_locked"/>
                            <field name="type" readonly="is_locked"/>
                            <button name="get_checks" type="object" string="Générer" class="btn-primary" invisible="is_locked"/>
                            <button name="get_checks" type="object" string="Chèques" class="btn-primary" invisible="is_locked == False"/>
                        </list>
                    </field>
                </page>
            </page>
        </field>
    </record>

    <record id="account_journal_checkbook_view_form" model="ir.ui.view">
        <field name="name">account.journal.checkbook.view.form</field>
        <field name="model">account.journal.checkbook</field>
        <field name="arch" type="xml">
            <form>
                <field name="check_ids" options="{'no_open': True, 'no_create': True}">
                    <list decoration-muted="state in ['used', 'canceled']" decoration-bf="state == 'used'" create="0" delete="0" edit="0" limit="10">
                        <field name="state" invisible="1"/>
                        <field name="serial_number"/>
                        <field name="payment_id"/>
                        <button
                            name="cancel"
                            type="object"
                            icon="fa-times"
                            title="Annuler"
                            class="btn-secondary"
                            invisible="state == 'canceled' or payment_id"
                            confirm="L'annulation de ce chèque le rendra inutilisable. Continuer?"
                            style="padding: 0 1px;"
                        />
                    </list>
                </field>
                <footer/>
            </form>
        </field>
    </record>

    <record id="account_journal_check_view_tree" model="ir.ui.view">
        <field name="name">account.journal.check.view.tree</field>
        <field name="model">account.journal.check</field>
        <field name="arch" type="xml">
            <list>
                <field name="serial_number"/>
            </list>
        </field>
    </record>

    <record id="account_journal_check_view_search" model="ir.ui.view">
        <field name="name">account.journal.check.view.search</field>
        <field name="model">account.journal.check</field>
        <field name="arch" type="xml">
            <search>
                <group expand="0">
                    <filter name="group_by_checkbook_id" context="{'group_by': 'checkbook_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- account.payment.method -->
    <record id="account_payment_method_view_tree" model="ir.ui.view">
        <field name="name">account.payment.method.view.tree</field>
        <field name="model">account.payment.method</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <!-- <field name="sequence"/> -->
                <field name="name"/>
                <field name="code"/>
                <field name="payment_type"/>
            </list>
        </field>
    </record>

    <record id="account_payment_method_action" model="ir.actions.act_window">
        <field name="name">Moyens de paiement</field>
        <field name="res_model">account.payment.method</field>
        <field name="view_mode">list,form</field>
        <field name="context">{"delete": False}</field>
    </record>

    <menuitem
        id="menu_account_payment_method"
        name="Moyens de paiement"
        action="account_payment_method_action"
        parent="account.account_account_menu"
        sequence="5"
    />
</odoo>