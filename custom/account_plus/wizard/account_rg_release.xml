<odoo>
    <record id="account_move_line_action_rg" model="ir.actions.server">
        <field name="name">Libération RG</field>
        <field name="model_id" ref="model_account_move_line"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">action = model.action_rg()</field>
    </record>
    
    <record id="account_rg_release_view_form" model="ir.ui.view">
        <field name="name">account.rg.release.view.form</field>
        <field name="model">account.rg.release</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date" required="1" options="{'datepicker': {'show_button': True}}"/>
                    </group>
                </sheet>
                <footer>
                    <button name="create_rg_release_invoice" type="object" string="Créer" class="btn-primary"/>
                    <button special="cancel" string="Annuler" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="account_move_line_view_tree_inherit_rg" model="ir.ui.view">
        <field name="name">account.move.line.view.tree.inherit.rg</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <list position="inside">
                <header>
                    <button name="create_rg_release_invoice" type="object" class="btn-primary" string="Créer Facture Libération RG"/>
                </header>
            </list>
            <field name="analytic_distribution" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="account_move_line_view_search_inherit" model="ir.ui.view">
        <field name="name">account.move.line.view.search.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter"/>
        <field name="arch" type="xml">
            <filter name="group_by_move" position="before">
                <filter string="Affaire" name="group_by_site_id" context="{'group_by': 'site_id'}"/>
                <filter string="Origine" name="group_by_invoice_origin" context="{'group_by': 'invoice_origin'}"/>
            </filter>
        </field>
    </record>

    <menuitem
        id="account_move_line_menu_rg"
        parent="account_plus.account_move_menu_validated"
        action="account_move_line_action_rg"
        sequence="2"
    />
</odoo>