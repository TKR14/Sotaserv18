<odoo>
    <record id="hr_payslip_run_payment_form_view" model="ir.ui.view">
        <field name="name">hr.payslip.run.payment.form.view</field>
        <field name="model">hr.payslip.run.payment</field>
        <field name="arch" type="xml">
            <form class="hr_payslip_run_payment_form_class">
                <notebook>
                    <page string="Paiements">
                        <field name="show_check_id_column" invisible="1"/>
                        <field name="line_ids">
                            <list editable="bottom" delete="0" create="0" force_save="1">
                                <field name="available_payment_methods_ids" invisible="1"/>
                                <field name="payment_method_code" invisible="1"/>
                                <field name="partner_id" readonly="1" options="{'no_open': True, 'no_create': True}"/>
                                <field name="account_id" readonly="1" options="{'no_open': True, 'no_create': True}"/>
                                <field name="amount" readonly="1" options="{'no_open': True, 'no_create': True}"/>
                                <field name="journal_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="payment_method_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="check_id" options="{'no_open': True, 'no_create': True}" column_invisible="not parent.show_check_id_column" readonly="payment_method_code not in ['check', 'effect']"/>
                            </list>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="button_register_payments" string="CrÃ©er" type="object" class="btn-primary"/>
                    <button special="cancel" string="Annuler" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>